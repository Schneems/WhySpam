	<script type="text/javascript">

		$(function() {
				$('.ui-state-default').hover(
					function() { $(this).addClass('ui-state-hover'); }, 
					function() { $(this).removeClass('ui-state-hover'); }						
				);
				
				$('#dialog').dialog({
					autoOpen: false,
					modal: true ,
					resizable: false,
					show: 'scale' ,
					bgiframe: true,
					width: 600,
				/*
					buttons: {
						"Ok": function() { 
							$(this).dialog("close"); 
						}, 
						"Cancel": function() { 
							$(this).dialog("close"); 
						} 
					}
