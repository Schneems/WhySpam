
<% form_tag change_password_update_path(:id => current_user), :method => :put do |f| %>
<table>
	<tr>
		<td>Old Password:</td>
		<td><%= password_field_tag 'old_password', @old_password, :size => 45, :class => 'text' %></td>
	</tr>
	<tr>
		<td>New Password:</td>
		<td><%= password_field_tag 'password', {}, :size => 45, :class => 'text' %></td>
	</tr>
	<tr>
		<td>Confirm new password:</td>
		<td><%= password_field_tag 'password_confirmation', {}, :size => 45, :class => 'text' %></td>
	</tr>            
            
            
</table>
<br />
Passwords must be between 6 and 40 characters
<br />
        <%= submit_tag 'Change password', :id => "change_password_submit" %>
<%end%>