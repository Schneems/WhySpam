
<div id="toppanel">
	<div id="panel">
		<div class="content slideclearfix">
			<div class="left">
				<h1>Login To Manage your Spam!</h1>
			</div>
			<div class="left">
				<!-- Register Form -->
				<form action="#" method="post">
					<h1>Not a member yet? Sign Up!</h1>	
							
					<p>The only way to sign up is to use a <%= link_to "Disposable Email", root_path, {
									 :host => "whyspam.me", :only_path => 
									true } %> or <%= link_to "Disposable Forms", 	new_form_path , 
													{ } %>.</p><br />
					<p>Already have a Disposable Email or Disposable Form? <br /> Log in using your Email address as your password, but please change your password after your first login</p>	
				</form>
			</div>
			<div class="left right">			
					<!-- Login Form -->
					<% form_tag session_path do -%>
						<h1>Member Login</h1>
						<label class="grey" for="log">Your Email:</label>
						<%= text_field_tag 'email', @login , :class => "field", :size=>"23",  :id => "user_bar_email" %>								
						<label class="grey" for="pwd">Password:</label>
						<%= password_field_tag 'password', nil, :class=>"field", :size=>"23", :id => "user_bar_password" %>
						
		            	<label><input name="rememberme" id="rememberme" type="checkbox" checked="checked" value="forever" />&nbsp;Remember me</label>
		
	        			<div class="clear"></div>
						<%= submit_tag 'Log in', :name => "submit", :value=>"Login",  :class => "bt_login" -%><br />
						<%= link_to "Forgot Password?", :controller => 'sessions', :action => 'confirm_send', :class => "lost-pwd"  %>														
					<% end %>
					
				
					
				
			</div>
		</div>

	</div> <!-- /login -->	

    <!-- The tab on top -->	
	<div class="tab">
		<ul class="login">
	    	<li class="left">&nbsp;</li>
	        <li><% if current_user -%><%= link_to "Hello "+ current_user.login.to_s, current_user, :content_method => :login %><% else -%>Hello Guest!<% end -%></li>
	

			<li class="sep">|</li>
			<li id="toggle">

				<% if current_user %>
					<%= link_to "Log out", logout_path, { :title => "Log out" }%>
				<% else %>
					<a id="open" class="open" href="#">Log In</a>
				<% end %>
				<a id="close" style="display: none;" class="close" href="#">Close Panel</a>			
			</li>
	    	<li class="right">&nbsp;</li>
		</ul> 
	</div> <!-- / top -->
</div> <!--panel -->