<html>

<head>	
		<meta http-equiv="content-type" content="text/html; charset=utf-8">	
		<meta name="author" content="Richard Schneeman">
		<meta name="verify-v1" content="WtrvU8zUP+Stu6up8RqDNNZ5zXNvWCQZFUe4RjxEpyI=">
		<link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
				
		<%= javascript_include_tag 'jquery', 'application', 'jquery-ui', 'jrails', 
							'liquid-canvas', 'liquid-canvas-plugins', 'prettyComments', 'jquery.prettyPopin' %>
		<%= stylesheet_link_tag 'why.css', 'prettyPopin' %>	
	    <!--[if IE]><%= javascript_include_tag 'excanvas.js' %><![endif]-->
	
		<script type="text/javascript">
		  // First we wait until the document is completely loaded using the handy
		  // jQuery "ready" method.
		    $(window).load(function() {

		      $("#corner_wrapper").liquidCanvas("[shadow fill{color:#fff}] => roundedRect");
		 //     $("#corner_wrapper").liquidCanvas("[shadow fill{color:#fff}] => TopLeftroundedRect");
		
		
		
		
		     // $("#corner_wrapper").liquidCanvas("[shadow ] => Header");
				$('textarea').prettyComments();
				$("tr[rel^='prettyPopin']").prettyPopin();
				$("a[rel^='prettyPopin']").prettyPopin();
				$("#nav_1 a,#nav_2 a, #nav_3 a, #nav_4 a, #nav_5 a").liquidCanvas("[shadow gradient{from:#c2c2ff;to:#3f3cff;} ] => roundedRect");
				$('#nav_1_hover a,#nav_2_hover a, #nav_3_hover a , #nav_4_hover a,  #nav_5_hover a ').liquidCanvas('[TopShadow gradient{from:#3f3cff;to:#c2c2ff} ] => roundedRect');
				



		    });
		</script>
	


</head>

<body >	
	<div id = "center_main">
	<div id = "main_title">
		<h1><%= link_to "Why <span class = 'spam'> Spam </span> Me", home_path %></h1>
		<%= link_to image_tag("QuestionEnvelope.png"), home_path %><h3><%= link_to "(Beta)", home_path %></h3>
		<br />
		<h5><%= link_to "We Don't Just Block Spam, We Fight Back!", home_path %></h5>
	</div>
	<div id = "beta">
	</div>
	

		

	<%= render :partial => "users/user_bar"%>

	<div id = "corner_wrapper">
		<div id = "content-main">
				<div id = "nav" >
				<span id = "nav_1_wrap" 
				 			>
				<span id = "nav_1"  >
				   <%= link_to "Secure Email", home_path , 
								{ } %>
				</span>
				<span id = "nav_1_hover" class = "nav_hover" style ="display:none" >
				   <%= link_to "Secure Email", home_path , 
								{ } %>
				</span>
				</span>
				

				<span id = "nav_2_wrap" >
					<span id = "nav_2"  >
					   <%= link_to "Secure Forms", home_path , 
									{ } %>
					</span>
					<span id = "nav_2_hover" class = "nav_hover"  style ="display:none" >
					   <%= link_to "Secure Forms", home_path , 
									{ } %>
					</span>
				</span><!-- nav_2_wrap -->
				



				<span id = "nav_3_wrap" >
					<span id = "nav_3"  >
					   <%= link_to "Slop <br /> Box", 	{:action => "slop_box", :controller => "users"} , 
									{ } %>
					</span>
					<span id = "nav_3_hover" class = "nav_hover"  style ="display:none" >
					   <%= link_to "Slop <br /> Box", 	{:action => "slop_box", :controller => "users"} , 
									{ } %>
					</span>
				</span>

				<span id = "nav_4_wrap" >
					<span id = "nav_4"  >
					   <%= link_to "Website Rankings", home_path , 
									{:style => "width:125px;" } %>
					</span>
					<span id = "nav_4_hover" class = "nav_hover"  style ="display:none" >
					   <%= link_to "Website Rankings", home_path , 
									{ :style => "width:125px;" } %>
					</span>
				</span>

				<span id = "nav_5_wrap" >
					<span id = "nav_5"  >
					   <%= link_to "Manage Your Spam", { :action => "manage", :controller => "users"} , 
									{ :style => "width:150px"} %>
					</span>
					<span id = "nav_5_hover" class = "nav_hover"  style ="display:none" >
					   <%= link_to "Manage Your Spam", { :action => "manage", :controller => "users"} , 
									{:style => "width:150px;" } %>
					</span>
				</span>
				</div>
				<hr />
			<% if flash[:notice] %><div id="flash"><%= flash[:notice] %></div><% end %>
			<br />

		<div id = "main">	
		<%= yield %>
		

		</div>
		</div>
	</div>
	</div><!-- center_main -->
</body>


</html>